$(function(){
  var toc = $("#toc")[0];
  var opOn = .96;
  var opOff = .5;
  var opCurr = opOff;
  var isOn = false;
  var fI = function(){
    toc.style.opacity = opCurr;
    opCurr += .02;
    if (opCurr >= opOn || isOn == false) {
      return;
    }
    setTimeout(fI, 1);
  }
  var fO = function(){
    toc.style.opacity = opCurr;
    opCurr -= .02;
    if (opCurr <= opOff || isOn == true) {
      return;
    }
    setTimeout(fO, 1);
  }
  toc.onmouseenter = (function(){
    isOn = true;
    fI();
  });
  toc.onmouseleave = (function(){
    isOn = false;
    fO();
  });
});
